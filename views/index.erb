<% if is_authenticated? %>
  <%= erb :alltweets %>
<% else %>
  <div class="container">
    <div class="row" id="splash">
      <div class="col-md-6">
        <h1>Welcome to nanoTwitter</h1>
        <img src="/images/bird.jpg" class="bird">
      </div>

      <div class="col-md-6" id="splash-form">
        <h2>Recent Tweets:</h2>
        <div class="panel panel-info">
          <div class="panel-body" id="tweet-scroller">
        	<%= erb :tweets_json %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
