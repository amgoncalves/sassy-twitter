<div class="modal-dialog">
<!-- Reply content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <a class="media-left" href="#fake">
        <img alt="" class="media-object img-rounded" src="/images/profile_64x64.png">
      </a>
      <div class="media-body">
        <div class="tweet-date"><%= @t["time_created"] %></div>
        <h4 class="media-heading">@<%= @t["author_handle"] %></h4>
        <p><%= @t["content"] %></p>
      </div>
    </div>
    
    <div class="modal-body">
      <form action="/reply?tweet_id=<%= @t['_id'] %>" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="reply[content]" placeholder="Reply to this tweet">
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Reply</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>
