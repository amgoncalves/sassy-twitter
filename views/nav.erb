<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-collapse navbar-collapse-1 collapse" aria-expanded="true" style="background: none;">

      <!-- Home Icon -->
      <ul class="nav navbar-nav">
	<li class="active">
	  <a href="/"><span class="glyphicon glyphicon-home"></span> Home</a>
	</li>
      </ul>
      
      <% if is_authenticated? %>
      
      <!-- Drop-down menu for logged-in user -->
      <div class="nav navbar-nav navbar-right">
	<ul class="nav navbar-nav">
	  <li class="nav-item dropdown">
	    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	      @<%= @cur_user.handle %>
	    </a>
	    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
	      <div class="dropdown-item"><a href="/edit_profile">Edit Profile</a></div>
	      <div class="dropdown-divider"></div>
	      <div class="dropdown-item">
	      <form action="/logout" method='POST'>
		<button type="submit" class="btn btn-link btn-logout">Logout</button>
	      </form>
	      </div>
	    </div>
	  </li>
	</ul>
      </div>

      <div class="navbar-form navbar-right">
	<!-- Search form -->	
	<div class="form-group has-feedback">
	  <input type="text" class="form-control-nav" id="search" aria-describedby="search1">
	  <span class="glyphicon glyphicon-search form-control-feedback" aria-hidden="true"></span>
	</div>
	<!-- Tweet Button -->
	<a href="/tweet/test">
	  <button class="btn btn-primary" type="submit" aria-label="Left Align">
	    <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Tweet
	  </button>
	</a>
      </div>
      
      <% else %>
      
      <!-- Login form -->
      <div class="navbar-form navbar-right">
	
	<form action="/login" method="POST">
	  <input name="remember" type="checkbox" class="form-check-input form-inline" id="remember">
	  <label class="form-check-label form-inline" for="remember">&nbsp;Remember Me</label>
	  <input id="email" name="email" type="text" placeholder="Email" class="form-control form-inline">
	  <input name="password" type="password" placeholder="Password" class="form-control form-inline">
	  <button type="submit" class="btn btn-primary">Sign in</button>	  
	</form>
      </div>
      
      <% end %>
      
    </div> <!-- /navbar-collapse -->
  </div><!-- /container -->
</div><!-- navbar-static-top -->
