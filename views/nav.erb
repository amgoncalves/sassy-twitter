<nav class="navbar">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">nanoTwiter (nT)</a>
    </div>
    <% if is_authenticated? %>
    <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" aria-hidden="true">Menu</button>
    <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#tweetbar" aria-expanded="false" aria-controls="navbar" aria-hidden="true"><span class="oi oi-pencil"></span> Tweet</button>
    <% else %>
    <form action="/login" method="POST">
      <input id="email" name="email" type="text" placeholder="Email" class="form-control form-inline">
      <input name="password" type="password" placeholder="Password" class="form-control form-inline">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </form>    
    <% end %>
    

    <!-- NAVBAR DROPDOWN CONTENT -->
    <div id="navbar" class="navbar-collapse collapse">
      <ul>
	<li><a href='edit_profile'>Edit profile</a></li>
	<li><a href='/users'>View all users</a></li>
	<li>
	  <form class="navbar-form navbar-right" action="/logout" method="POST">
	    <button type="submit" class="btn btn-primary">Logout</button>
	  </form>
	</li>
      </ul>
    </div>

    <!-- TWEETBAR DROPDOWN CONTENT -->
    <div id="tweetbar" class="navbar-collapse collapse">
      <h4>Compose new Tweet</h4>      
      <%= erb :tweet_stub %>
    </div>
    
  </div><!-- /.container -->
</nav><!-- /.navbar -->

