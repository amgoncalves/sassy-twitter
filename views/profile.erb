<div class="panel panel-default">
  <div class="panel-body">

    <!-- Profile Image -->
    <a href="#"><img class="img-responsive" alt="" src="/images/profile_500x500.png"></a>

    <!-- Profile Info -->
		<% unless @targeted_user.profile.name.empty? %>
			<div class="twPc-divName">
				<%= @targeted_user.profile.name %>
			</div>
		<% end %>

    <div>
      <a href="/user/<%= @targeted_id %>">@<%= @targeted_user.handle %></a>
    </div>

		<% unless @targeted_user.profile.bio.empty? %>
			<div>
				Bio: <%= @targeted_user.profile.bio %>
			</div>
		<% end %>

		<% unless @targeted_user.profile.location.empty? %>
			<div>
				<span class="glyphicon glyphicon-map-marker"></span> <%= @targeted_user.profile.location %>
			</div>
		<% end %>

		<% unless @targeted_user.profile.date_joined.nil? %>
			<div>
				<span class="glyphicon glyphicon-calendar"></span> Joined <%= @targeted_user.profile.date_joined.strftime("%B %Y") %>
			</div>
		<% end %>

		<%  unless @targeted_user.profile.dob.nil? %>
			<div>
				<span class="glyphicon glyphicon-user"></span> Born on <%= @targeted_user.profile.dob.strftime("%B %d, %Y") %>
			</div>
		<% end %>

    <!-- User Statistics -->
    <div class="row">
      <div class="col-xs-3">
	<h5>
	  <small>TWEETS</small>
	  <br>
	  <a href="/user/<%= @targeted_id %>">
	    <%= @ntweets %>
	  </a>
	</h5>
      </div>
      <div class="col-xs-4">
	<h5>
	  <small>FOLLOWING</small>
	  <br>
	  <a href="/user/followings/?targeted_id=<%= @targeted_id %>">
	    <%= @nfollowing %>
	  </a>
	</h5>
      </div>
      <div class="col-xs-5">
	<h5>
	  <small>FOLLOWERS&nbsp;</small>
	  <br>
	  <a href="/user/followeds/?targeted_id=<%= @targeted_id %>">
	    <%= @nfollowed %>
	  </a>
	</h5>
      </div>
    </div>

    <!-- Follow Button -->
    <% if @targeted_user != session[:user] %>
    <div>
      <form action = "/follow?targeted_id=<%= @targeted_id %>" method = 'POST'>
	<button id="follow-button" class="btn btn-primary" type="submit">
	  <% if @isfollowing == true %>
	  Following
	  <% else %>
	  + Follow
	  <% end %>
	</button>
      </form>
    </div>
    <% end %>
  </div><!-- ./panel-body -->
</div><!-- ./panel-default -->
