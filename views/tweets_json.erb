<% @tweets.each do |tweet| %>
<% @t = JSON.parse(tweet) %>
<div class="media">
  
  <a class="media-left" href="#fake">
    <img alt="" class="media-object img-rounded" src="/images/profile_64x64.png">
  </a>
  
  <div class="media-body">
    
    <div class="tweet-date">
      <%= DateTime.parse(@t["time_created"]).strftime("%b %d %I:%M:%S %p") %>
    </div>
    
    <h4 class="media-heading">
      <% author_id = @t["author_id"]["$oid"] %>
      <% if is_authenticated? %>
        <a href="/user/<%= author_id %>"> @<%= @t["author_handle"] %> </a>
      <% else %>
        @<%= @t["author_handle"] %>
      <% end %>
    </h4>

    <p><%= @t["content"] %></p>
    <% if @t["original_tweet_id"] != nil %>
    <a href="/tweet/<%= @t["original_tweet_id"]["$oid"] %>">this tweet retweeted this tweet</a>
    <% end %>
    
    
    <ul class="nav nav-pills nav-pills-custom">
      <% if is_authenticated? && author_id != @cur_user._id.to_s %>
        <li><a href="/reply?tweet_id=<%= @t['_id']["$oid"] %>"><span class="glyphicon glyphicon-share-alt"></span></a></li>
        <li><a href="/retweet?tweet_id=<%= @t['_id']["$oid"] %>"><span class="glyphicon glyphicon-retweet"></span></a></li>
        <li>
          <% if @cur_user.like?(@t["_id"]["$oid"].to_s) %>
            <a href="/unlike?tweet_id=<%= @t['_id']["$oid"] %>"><span class="glyphicon glyphicon-star" style="color:red"></span></a>
          <% else %>
            <a href="/like?tweet_id=<%= @t['_id']["$oid"] %>"><span class="glyphicon glyphicon-star"></span></a>
          <% end %>
        </li>
      <% else %>
        <li><a name="#"><span class="glyphicon glyphicon-share-alt" style="color:grey"></span></a></li>
        <li><a name="#"><span class="glyphicon glyphicon-retweet" style="color:grey"></span></a></li>
        <li><a name="#"><span class="glyphicon glyphicon-star" style="color:grey"></span></a></li>
      <% end %>
      <li><a href="/tweet/<%= @t['_id']["$oid"] %>"><span class="glyphicon glyphicon-option-horizontal"></span></a></li>
    </ul>
  </div>
</div>
<hr>
<% end %>

