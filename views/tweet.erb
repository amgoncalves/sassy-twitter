<div class="container">
  <a class="media-left" href="#fake">
    <img alt="" class="media-object img-rounded" src="/images/profile_64x64.png">
  </a>
  <div class="media-body">
    <div class="tweet-date"><%= @tweet["time_created"] %></div>
    <h2 class="media-heading">@<%= @tweet["author_handle"] %></h2>
    <h4><%= @tweet["content"] %></h4>
  </div>
</div>

<br>

<h4>replys</h4>
<div class="media">
  <% @replys.each do |reply| %>
    <a class="media-left" href="#fake">
      <img alt="" class="media-object img-rounded" src="/images/profile_64x64.png">
    </a>
    <div class="media-body">
      <div class="tweet-date"><%= reply["time_created"] %></div>
      <h4 class="media-heading">@<%= reply["replier_handle"] %></h4>
      <p><%= reply["content"] %></p>
    </div>
    <hr>
  <% end %>
</div>


