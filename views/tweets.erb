<% @tweets.each do |tweet| %>
<% @t = tweet %>
<div class="media">
  
  <a class="media-left" href="#fake">
    <img alt="" class="media-object img-rounded" src="/images/profile_64x64.png">
  </a>
  
  <div class="media-body">
    
    <div class="tweet-date">
      <%= @t.time_created.strftime("%b %d %I:%M:%S %p") %>
    </div>
    
    <h4 class="media-heading">
      <% author_id = @t["author_id"] %>
      <% if is_authenticated? %>
        <a href="/user/<%= author_id %>"> @<%= @t["author_handle"] %> </a>
      <% else %>
        @<%= @t["author_handle"] %>
      <% end %>
    </h4>

    <p><%= @t["content"] %></p>
    <% if @t["original_tweet_id"] != nil %>
    <a href="/tweet/<%= @t["original_tweet_id"] %>">this tweet retweeted this tweet</a>
    <% end %>
    
    <% if is_authenticated? && author_id != @cur_user._id %>
      <ul class="nav nav-pills nav-pills-custom">
        <li><a name="reply" data-toggle="modal" data-target="#myReply"><span class="glyphicon glyphicon-share-alt"></span></a></li>
        <li><a name="retweet" data-toggle="modal" data-target="#reTweet"><span class="glyphicon glyphicon-retweet"></span></a></li>
        <li>
          <% if @cur_user.like?(@t._id.to_s) %>
            <a href="/unlike?tweet_id=<%= @t['_id'] %>"><span class="glyphicon glyphicon-star" style="color:red"></span></a>
          <% else %>
            <a href="/like?tweet_id=<%= @t['_id'] %>"><span class="glyphicon glyphicon-star"></span></a>
          <% end %>
        </li>
        <li><a href="/tweet/<%= @t['_id'] %>"><span class="glyphicon glyphicon-option-horizontal"></span></a></li>
      </ul>

      <!-- Reply Dialog -->
      <div class="modal fade" id="myReply" role="dialog"><%= erb :reply %></div>
      <!-- Retweet Dialog -->
      <div class="modal fade" id="reTweet" role="dialog"><%= erb :retweet %></div>

    <% end %>
  </div>
</div>
<hr>
<% end %>
